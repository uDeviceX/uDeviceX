. u.utils

n=$1; shift
x=$1; shift
y=$1; shift
z=$1; shift
e=$1; shift # executable

if   test $#   -eq 0
then Time="--time 00:10:00"
elif test "$1"   = -
then                   shift
else Time="--time $1"; shift
fi

Args="--output=out.txt --error=err.txt -C gpu $Time"
exec_stdin sbatch -n $n $Args <<EOF
#!/bin/bash

. u.load.daint
srun `u.wrap "$e"` $x $y $z   $@
EOF
