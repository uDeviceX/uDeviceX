### Build u/safe out of source
# cTEST: comp.safe.t1
(cd ../cmd; make ) > /dev/null
t=/tmp/udx.$$
trap 'rm -rf $t' 0 1 2 3 15
:
u=u/safe
s=`pwd`
mkdir $t
( cd $t
  u.conf "$s" "$u" "$s/conf/default.h" <<!
  DBG_PEEK
  run
!
  { make clean && u.make -j; } > /dev/null
)
echo $?  > make.out.status

