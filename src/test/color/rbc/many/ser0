set -u
u=u/x c=$s/conf/double.poiseuille.h
cp $s/data/cells/rbc/498.off rbc.off

rbc0 () { Rbc=; }
rbc1 () {
   r="$1" fr=0 sc=0.5 ang=rnd
   plcmt.ro $xs $ys $zs     $r $fr $sc $ang /dev/null rbcs-ic.txt
   Rbc="rbcs multi_solvent fsiforces contactforces color_freq=1000"
}

xs=32 ys=32 zs=32
rbc1 2.0

u.conf $s $u $c <<!
   XS=$xs YS=$ys ZS=$zs 
   $Rbc
   part_dumps part_freq=1500 field_freq=1500
   tend=2.0
   run
!
{ make clean && u.make -j; } > make.log
TIM='-f %e' u.run ./udx '
rbc = {
    @include "rbc.test.cfg"
}'
