#### RBC in a periodic box
# nTEST: mpi.t1
rm -rf diag.txt h5 bop ply rbc.off
:
export PATH=../tools:$PATH
(cd ../cmd; make ) > /dev/null
cp data/cells/rbc.498.off  rbc.off
echo 1 0 0 8  0 1 0 8  0 0 1 8  0 0 0 1 > rbcs-ic.txt
:
u.conf conf/couette.h <<!!!
   rbcs tend=0.5 part_freq=100 DBG_PEEK
   run
!!!
{ make clean && u.make -j; } > /dev/null
u.run 2 1 1 ./udx
awk '{print 10000*$2}' diag.txt > diag.out.txt

#### double Poiseuille
# nTEST: mpi.t2
rm -rf diag.txt h5 bop ply rbc.off
:
export PATH=../tools:$PATH
(cd ../cmd; make ) > /dev/null
cp data/cells/rbc.498.off  rbc.off
:
u.conf conf/double.poiseuille.h <<!!!
   kBT=1e-7 tend=2.1 part_freq=100 field_freq=300
   pushflow doublepoiseuille DBG_PEEK
   field_dumps part_dumps pushflow
   run
!!!
{ make clean && u.make -j; } > /dev/null
u.run 2 1 1 ./udx
avg_h52.m h5/flowfields-0013.h5 | uscale 10 > h5.out.txt

####
# nTEST: mpi.t3
rm -rf diag.txt h5 bop ply rbc.off
:
export PATH=../tools:$PATH
(cd ../cmd; make ) > /dev/null
cp data/cells/rbc.498.off  rbc.off
cp data/sdf/cyl1/cyl.dat sdf.dat
x=0.75 y=8 z=9; echo 1 0 0 $x  0 1 0 $y  0 0 1 $z  0 0 0 1 > rbcs-ic.txt
:
u.conf conf/around.h <<!!!
   kBT=1e-7 rbcs tend=4.0 part_freq=5000 walls wall_creation=1000
   field_dumps part_dumps field_freq=5000 pushflow pushrbc DBG_PEEK
   run
!!!
{ make clean && u.make -j; } > /dev/null
u.run 3 1 1 ./udx
mid_h5.m h5/flowfields-0001.h5 > h5.out.txt

#### Poiseuille
# sTEST: mpi.t4
rm -rf diag.txt h5 bop ply
:
export PATH=../tools:$PATH
(cd ../cmd; make ) > /dev/null
cp data/cells/rbc.498.off  rbc.off
cp data/sdf/wall1/wall.dat sdf.dat
:
u.conf conf/poiseuille.h <<!!!
   tend=4.0 part_freq=600 walls wall_creation=100
   field_dumps part_dumps field_freq=600 pushflow
   run
!!!
{ make clean && u.make -j; } > /dev/null
u.run 1 1 2 ./udx
avg_h5.m h5/flowfields-0013.h5 | uscale 100 > h5.out.txt

