#### periodic box: stretch
# nTEST: rbc.stretch.simple.0
rm -rf bop diag.txt h5 ply rbc.off
:
A=1e4
nv=642
cell=data/cells/rbc/$nv.off
cp              $cell           rbc.off
u.stretch $A 5% $cell         > rbc.stretch
:
x=4 y=6 z=8; echo 1 0 0 $x  0 1 0 $y  0 0 1 $z  0 0 0 1 > rbcs-ic.txt
:
u.conf conf/couette.h <<!
   MESH_SHIFT_CENTER RBC_STRETCH
   RBCnv=$nv
   rbcs tend=0.5
   run
!
{ make clean && u.make -j; } > /dev/null
u.run ./udx '
glb = {
    L = [8, 12, 16]
}
rbc = {
    @include "rbc.test.cfg"
}
dump = {
    parts = true;
    freq_parts = 300;
};'
ply2punto r/00003.ply | uscale 0.1 > ply.out.txt
